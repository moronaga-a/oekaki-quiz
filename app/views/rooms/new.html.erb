<div class="min-h-screen flex items-center justify-center bg-amber-50">
  <div class="bg-orange-100 p-8 border-4 border-amber-900 shadow-[8px_8px_0px_0px_rgba(120,53,15,1)] max-w-md w-full">
    <h1 class="text-4xl font-black text-center text-amber-900 mb-8 tracking-tight">
      🎨 お絵描きクイズ 🎨
    </h1>

    <div class="space-y-4">
      <!-- ルーム作成ボタン -->
      <div class="text-center">
        <%= button_to "新しいルームを作成", rooms_path, method: :post, class: "w-full bg-amber-600 hover:bg-amber-700 text-white font-black py-4 px-6 border-4 border-amber-900 rounded-lg shadow-[4px_4px_0px_0px_rgba(120,53,15,1)] hover:shadow-[2px_2px_0px_0px_rgba(120,53,15,1)] active:shadow-none transition-all uppercase tracking-wide" %>
      </div>

      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t-4 border-dotted border-amber-900 rounded-lg"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-3 bg-orange-100 text-amber-900 font-bold uppercase">または</span>
        </div>
      </div>

      <!-- ルームID入力フォーム -->
      <div>
        <%= form_with url: root_path, method: :get, local: true, class: "space-y-3" do |f| %>
          <%= f.text_field :room_id,
              placeholder: "ABC123",
              maxlength: 6,
              class: "w-full px-4 py-3 border-4 border-amber-900 bg-yellow-50 focus:outline-none focus:bg-white text-center uppercase text-2xl font-black tracking-widest text-amber-900 rounded-lg" %>
          <%= f.submit "ルームに参加",
              class: "w-full bg-orange-600 hover:bg-orange-700 text-white font-black py-4 px-6 border-4 border-amber-900 rounded-lg shadow-[4px_4px_0px_0px_rgba(120,53,15,1)] hover:shadow-[2px_2px_0px_0px_rgba(120,53,15,1)] active:shadow-none transition-all uppercase tracking-wide" %>
        <% end %>
      </div>
    </div>

    <% if flash[:alert] %>
      <div class="mt-4 p-3 bg-red-200 border-4 border-red-900 text-red-900 font-bold">
        ⚠️ <%= flash[:alert] %>
      </div>
    <% end %>
  </div>
</div>
